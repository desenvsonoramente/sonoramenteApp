<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cor de fundo do splash -->
    <item android:drawable="@color/splash_bg" />

    <!-- Logo central (ajuste os inset para controlar o tamanho) -->
    <item>
        <inset
            android:insetLeft="60dp"
            android:insetRight="60dp"
            android:insetTop="220dp"
            android:insetBottom="220dp">
            <bitmap
                android:gravity="center"
                android:src="@drawable/splash_logo" />
        </inset>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Splash antigo (Android < 12) -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Android 12+ SplashScreen API (sem postSplashScreenTheme) -->
        <item
            name="android:windowSplashScreenBackground"
            tools:targetApi="31">
            @color/splash_bg
        </item>

        <item
            name="android:windowSplashScreenAnimatedIcon"
            tools:targetApi="31">
            @drawable/splash_logo
        </item>

        <!-- ✅ REMOVE o círculo branco -->
        <item
            name="android:windowSplashScreenIconBackgroundColor"
            tools:targetApi="31">
            @android:color/transparent
        </item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
